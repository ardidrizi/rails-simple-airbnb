<%= simple_form_for @flat do |f| %>
  <div class="mb-3">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.input :address, input_html: { class: 'form-control' } %>
  </div>

  <div class="mb-3">
    <%= f.input :description, as: :text, input_html: { class: 'form-control', rows: 5 } %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.input :price_per_night, label: 'Price per night (USD)', input_html: { class: 'form-control' } %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.input :number_of_guests, label: 'Number of guests', input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.input :picture_url, label: 'Picture URL', input_html: { class: 'form-control' } %>
  </div>

  <div class="mt-4">
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', flats_path, class: 'btn btn-outline-secondary ms-2' %>
  </div>
<% end %>
