<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Flats</h1>
  <%= link_to 'Add a new flat', new_flat_path, class: 'btn btn-primary' %>
</div>

<% if @flats.empty? %>
  <p class="text-muted">No flats available yet. <%= link_to 'Add one', new_flat_path %>.</p>
<% end %>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @flats.each do |flat| %>
    <div class="col">
      <div class="card h-100">
        <% if flat.picture_url.present? %>
          <%= link_to image_tag(flat.picture_url, class: "card-img-top", alt: flat.name), flat_path(flat) %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title">
            <%= link_to flat.name, flat_path(flat), class: 'text-decoration-none' %>
          </h5>
          <p class="card-text text-muted"><i class="fa fa-map-marker-alt me-1"></i><%= flat.address %></p>
          <p class="card-text"><%= truncate(flat.description, length: 120) %></p>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
          <small class="text-muted"><strong>$<%= flat.price_per_night %></strong> / night</small>
          <div>
            <%= link_to 'Show', flat_path(flat), class: 'btn btn-sm btn-outline-primary me-1' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-sm btn-outline-secondary me-1' %>
            <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
